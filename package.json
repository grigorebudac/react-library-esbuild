{
  "name": "@grigorebudac/react-library-esbuild",
  "description": "Sammple React.js library with typescript and esbuild",
  "author": "Grigore Budac",
  "version": "1.0.0",
  "license": "MIT",
  "main": "./esm",
  "module": "./cjs",
  "browser": "./esm",
  "typings": "./types",
  "scripts": {
    "start": "yarn watch",
    "build:types": "tsc",
    "build": "rimraf dist && node scripts/esbuild.build.js && yarn build:types && cp package.json dist",
    "watch": "node scripts/esbuild.watch.js && yarn build:types -- --watch",
    "test": "jest",
    "test:watch": "yarn test --watch"
  },
  "devDependencies": {
    "@types/react": "^18.0.15",
    "esbuild": "^0.14.53",
    "esbuild-node-externals": "^1.4.1",
    "glob": "^8.0.3",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "typescript": "^4.7.4",
    "react": "^18.2.0"
  },
  "peerDependencies": {
    "react": ">= 17"
  }
}
